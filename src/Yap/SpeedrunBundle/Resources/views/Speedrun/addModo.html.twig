{% extends "YapSpeedrunBundle::layout.html.twig" %}

{% block title %}
	{{ game.name }} - {{ parent() }}
{% endblock %}

{% block yapspeedrun_body %}
	<div class="row">
		<div class="large-12 gameTitle">
			<h2 class="gameTitleName">{{ game.name }}</h2>
			<div class="gameTitleImg">
				<img src="{{ vich_uploader_asset(game, 'imageFile') }}">
			</div>
		</div>
	</div>
	<div class="row">
		<div class="large-9 column">
			<input placeholder="Find by Name" id="filterBox" type="text" /> 
			<ul class="navList">
			{% for user in users %}
				<li>
					<a href="{{ path('yapspeedrun_seeprofile', {'name': user.username}) }}">{{ user.username }}</a> - 
					<a href="{{ path('yapspeedrun_addmodo', {'slug': game.slug, 'user': user.username}) }}">Add</a>
				</li>
			{% endfor %}
			</ul>
		</div>
	</div>


{% endblock %}

{% block javascripts %}

{{ parent() }}

<script type="text/javascript">
	$('.example').popover();
</script>

{% endblock %}