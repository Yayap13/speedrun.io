{% extends "YapBlogBundle::layout.html.twig" %}

{% block title %}
	Supprimer un article - {{ parent() }}
{% endblock %}

{% block yapblog_body %}

<h2>Supprimer un article</h2>
<p>Etes-vous certain de vouloir supprimer l'article "{{ article.title }}" ?</p>

<form action="{{ path('yapblog_delete', {'id': article.id}) }}" method="post">
	<a href="{{ path('yapblog_see', {'slug': article.slug}) }}" class="btn btn-default btn-primary btn-sm">
		<i class="glyphicon glyphicon-chevron-left"></i> Retour Ã  l'article
	</a>
	<input type="submit" value="Supprimer" class="btn btn-danger" />
	{{ form_rest(form) }}
</form>

{% endblock %}