{% extends "YapBlogBundle::layout.html.twig" %}

{% block title %}
	Lecture d'un article - {{ parent() }}
{% endblock %}

{% block yapblog_body %}

<h2>
	{% if article.image is not null %}
		<img src="{{ asset(article.image.webPath) }}" alt="{{ article.image.alt }}" />
	{% endif %}

	{{ article.title }}
</h2>
<i>Par {{ article.user }}, le {{ article.date|date('d/m/Y') }}</i>

{% if article.categories.count > 0 %}
	Catégories :
	{% for category in article.categories %}
		{{ category.name }}
		{% if not loop.last %} - {% endif %}
	{% endfor %}
{% endif %}

<div class="well">
	{{ article.content }}
</div>

<p>
	<a href="{{ path('yapblog_index') }}" class="btn btn-default btn-primary btn-sm">
		<i class="glyphicon glyphicon-chevron-left"></i> Retour à la liste
	</a>
	
	<a href="{{ path('yapblog_modify', {'id': article.id}) }}" class="btn btn-default btn-primary btn-sm">
		<i class="glyphicon glyphicon-edit"></i> Modifier l'article
	</a>
	
	<a href="{{ path('yapblog_delete', {'id': article.id}) }}" class="btn btn-default btn-primary btn-sm">
		<i class="glyphicon glyphicon-trash"></i> Supprimer l'article
	</a>
</p>

{% endblock %}