<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}SpeedRun.io{% endblock %}</title>
        {% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('css/foundation.css') }}" type="text/css" />
		<link rel="stylesheet/less" href="{{ asset('css/style.less') }}" type="text/css" />
		<link rel="stylesheet/less" href="{{ asset('bundles/dcsrating/css/rating.css') }}" type="text/css" />
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
		{% endblock %}
		
		{% stylesheets '@FOSCommentBundle/Resources/assets/css/comments.css' %}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
		{% endstylesheets %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	    <div class="site-container">
	    	<div class="pusher">
		        <div class="menu-burger">
		          <a class="burger-icon" id="menu" href="#"><i>Menu</i></a>
		        </div>
		        <nav class="nav">
		        	<div class="modularMenu">
		            	<div class="menu menu-nav">
			            	<li>
			            		<a href="{{ path('yapspeedrun_index') }}">Home</a>
			            		<div class="verticalRule"></div>
			            	</li>
			            	<li>
			            		<a href="{{ path('yapspeedrun_listgames') }}">Games</a>
			            		<div class="verticalRule"></div>
			            	</li>
			            	<li>
			            		<a href="{{ path('yapspeedrun_latesttimes') }}">Times</a>
			            		<div class="verticalRule"></div>
			            		<div class="verticalRule verticalRuleRight"></div>
			            	</li>
			            	</div>
		            	<div class="menu menu-logo" style="text-align: center;">
		              		<a href="{{ path('yapspeedrun_index') }}" class="center">
		               			<div class="arrow"></div>
		                		<div class="arrow arrow-180"></div>
		              		</a>
		            	</div>    
		            	{% include 'loginMenu.html.twig' %}
		        	</div>
	        	</nav>

	        	<div class="content">
	        		{% for flashMessage in app.session.flashbag.get('info') %}
				    <div id="flashbag" class="flashbag flashbag-info">
				        {{ flashMessage }}
				    </div>
					{% endfor %}
					
					{% block body %}
					{% endblock %}
		
					<div class="row">
						<div class="small-12 column">
							The sky's the limit Â© 2012 and beyond.
						</div>
					</div>
					{% block javascripts %}
						<script type="text/javascript" src="{{ asset('js/jquery-2.1.1.min.js') }}"></script>
						<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
						<script type="text/javascript" src="https://raw.githubusercontent.com/less/less.js/v2.1.0/dist/less.min.js"></script>
						<script type="text/javascript" src="//code.highcharts.com/highcharts.js"></script>
						<script type="text/javascript" src="{{ asset('js/test.js') }}"></script>
						<script type="text/javascript" src="{{ asset('js/jquery.tablesorter.min.js') }}"></script>
						<script type="text/javascript" src="{{ asset('js/highChartsTheme.js') }}"></script>
					{% endblock %}
					<div id="site-cache" class="site-cache"></div>
				</div>
			</div>
		</div>
	</body>
</html>